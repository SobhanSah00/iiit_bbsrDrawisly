generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  email    String  @unique
  photo    String?

  // Many-to-many: Rooms the user has joined
  joinedRooms Room[] @relation("RoomParticipants")

  // One-to-many: Rooms the user controls (admin)
  controlledRooms Room[] @relation("RoomAdmin")

  // One-to-many: User's messages
  chat Chat[]

  skills UserSkill[]

  sentInvitations     Invitation[] @relation("SentInvitations")
  receivedInvitations Invitation[] @relation("ReceivedInvitations")
}


model Invitation {
  id          String            @id @default(uuid())

  // Who sent the invitation
  sender      User              @relation("SentInvitations", fields: [senderId], references: [id])
  senderId    String

  // Who received the invitation
  receiver    User              @relation("ReceivedInvitations", fields: [receiverId], references: [id])
  receiverId  String

  // Optional message (reason / note)
  message     String?

  // Status
  status      InvitationStatus  @default(PENDING)

  // If accepted, later we can attach the created roomId for reference
  acceptedRoomId String?        

  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}


enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model UserSkill {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  skillName       String
  focusArea       String
  experienceLevel ExperienceLevel
  description     String

  components String[] @default([])
  tools      String[] @default([])

  createdAt DateTime @default(now())
}

model Room {
  id       String @id @default(uuid())
  title    String
  joincode String @unique

  // Many-to-many: Users who joined this room
  participants User[] @relation("RoomParticipants")

  // One-to-many: Admin of the room
  admin   User   @relation("RoomAdmin", fields: [adminId], references: [id])
  adminId String

  // One-to-many: Chat messages in this room
  chat Chat[]
  draw Draw[]

  recordings SessionRecording[]

  createdat DateTime @default(now())
}

model SessionRecording {
  id     String @id @default(uuid())
  room   Room   @relation(fields: [roomId], references: [id])
  roomId String

  url      String
  size     Int?
  duration Int?

  createdAt DateTime @default(now())
}

model Chat {
  seriealNo Int    @default(autoincrement())
  id        String @id @default(uuid())
  content   String

  // One-to-many: Message belongs to a user
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // One-to-many: Message belongs to a room
  room   Room   @relation(fields: [roomId], references: [id])
  roomId String

  createdAt DateTime @default(now())
}

enum Shape {
  rectangle
  diamond
  circle
  line
  arrow
  text
  freeHand
}

model Draw {
  id          Int     @id @default(autoincrement())
  shape       Shape
  strokeStyle String
  fillStyle   String
  lineWidth   Int
  font        String?
  fontSize    String?
  startX      Int?
  startY      Int?
  endX        Int?
  endY        Int?
  text        String?
  points      Json?
  room        Room    @relation(fields: [roomId], references: [id])
  roomId      String
}
